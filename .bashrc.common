STARTBGCOLOR="\e[47m"
NONECOLOR="\e[0m"
#color table [Note: Replace 0 with 1 for dark color]
GREEN='\e[0;32m';
BLUE='\e[0;34m';
PURPLE='\e[0;35m'
RED='\e[0;31m'
CYAN='\e[0;36m'

