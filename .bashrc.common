export PS1="\n$PURPLE$STARTBGCOLOR[\T \d]$BLUE[\u@\h \w $RED\$? \!$BLUE]$NONECOLOR\n\$"

#mkdir and cd to
function mkc () { mkdir -p "$@" && eval cd "\"$@\""; }

# find helper
function f() {
  find . -name "*$1*" 2>/dev/null 
}

# find then ls -l
function fl () {
  find . -name "*$1*" 2>/dev/null -exec ls -l {} \;
}
