set -o vi

alias rm="rm -rf"
alias cp="cp -rf"
alias mv="mv -f"
alias ls="ls --block-size=M -lh"
alias ll="ls --block-size=M -lh"
alias l="ls --block-size=M -lah"
alias h="history"
alias f="find . -name "
alias pg="ps -ef|grep "

export PATH=$PATH:$HOME/bin

#yum
alias yi="sudo yum install "
alias ys="sudo yum search"
alias yu='sudo yum -y upgrade'

#rsync
alias s="rsync -avz -e ssh --progress"

alias ..="cd .."
alias ...="cd ../../"
alias _="cd -"

#cd spell check and correct
shopt -s cdspell

tab auto-completion ignore case
bind "set completion-ignore-case on"


if [[ -f $HOME/.bashrc.wk ]]; then
	. $HOME/.bashrc.wk
fi

if [[ -f $HOME/.bashrc.java ]]; then
	. $HOME/.bashrc.java
fi

if [[ -f $HOME/.bashrc.py ]]; then
	. $HOME/.bashrc.py
fi

if [[ -f $HOME/.bashrc.git ]]; then
	. $HOME/.bashrc.git
fi

STARTBGCOLOR="\e[47m"
NONECOLOR="\e[0m"
#color table [Note: Replace 0 with 1 for dark color]
GREEN='\e[0;32m';
BLUE='\e[0;34m';
PURPLE='\e[0;35m'
RED='\e[0;31m'
CYAN='\e[0;36m'
export PS1="\n$PURPLE$STARTBGCOLOR[\T \d]$BLUE[\u@\h \w $RED\$? \!$BLUE]$NONECOLOR\n\$"

